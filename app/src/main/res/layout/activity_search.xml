<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guofeng.picturelinkworld.SearchActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_background"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/baseline_search_24" />

        <EditText
            android:id="@+id/search_edit"
            android:layout_width="200dp"
            android:layout_height="52dp"
            android:background="@drawable/edit_background1"
            android:hint="@string/search_edit"
            android:inputType="text"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/close_text_button"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/r_background"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_close_24"
            android:visibility="gone" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.022" />

</androidx.constraintlayout.widget.ConstraintLayout>